{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "**/*.pdf"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "dotnet-talks",
      "_appTitle": ".NET Talks",
      "_appLogoPath": "images/dotnet-logo.jpg",
      "_enableSearch": true,
      "pdf": false
    }
  }
}